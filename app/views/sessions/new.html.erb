
<div class="">
<h2 class="ui center aligned icon header">
  <i class="circular power off icon red"></i>
  เข้าสู่ระบบ
</h2>
<div class="column">
        <div class="ui placeholder segment">
            <div class="ui two column very relaxed stackable grid">
                <div class="column">
                    <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
                            <div class="field">
                                <%= f.label :username, "username" %>
                                <div class="ui left icon input">
                                    <%= f.text_field :username, placeholder: "กรอกบัญชีผู้ใช้"%>
                                    <i class="user icon"></i>
                                </div>
                            </div>
                            <div class="field">
                                <%= f.label :password, "password" %>
                                <div class="ui left icon input">
                                    <%= f.text_field :password, placeholder: "กรอกรหัสผ่าน"%>
                                    <i class="lock icon"></i>
                                </div>
                            </div>
                            <%= f.button "ลงชื่อเข้าใช้", class: "ui orange submit button" %>
                    <% end %>
                </div>
                <div class="middle aligned column">
                <div class="ui big button">
                    <i class="signup icon"></i>
                    Sign Up
                </div>
                </div>
            </div>
            <div class="ui vertical divider">
                Or
            </div>
        </div>
    </div>
</div>

