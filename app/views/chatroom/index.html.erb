<h2 class="ui center aligned icon header">
  <i class="circular users icon orange"></i>
  ห้องแชทชาวระยอง
</h2>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui card fluid raised chatbox">
            <div class="content" id="messages">
                <div class="ui large feed" id="message-container" >
                    <%= render @messages%>
                </div>
            </div>
            <div class="extra content">

            <% if logged_in? %>
                <%= form_for(@message, html: {class: "ui reply form"}, role: "form", url: message_path, remote: true) do |f| %>
                    <div class="field" data-children-count="1">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body %>
                            <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe  %>
                        </div>
                    </div>
                <% end %>   
            <% else %>
                <%= link_to '<div class="ui animated fade button fluid" tabindex="0">
                <div class="visible content">กรุณาลงชื่อเข้าใช้</div><div class="hidden content">เข้าใช้งานระบบ หรือ สมัครบัญชีใหม่</div>'.html_safe, login_path %>
                
                    
                    
                </div>
            <% end %>     
            </div>
        </div>
    </div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui vertical ">
                    <a class="active item">
                        tester
                    </a>
                
                </div>
            </div>
        </div>
    </div>
</div>


